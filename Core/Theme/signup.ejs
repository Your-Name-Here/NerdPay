<!DOCTYPE html>
<html lang="en">

  <%- include ('head'); -%>

<body>

  <%- include ('nav'); -%>

  <!-- Page Content -->
  <div class="container">

    <!-- Page Features -->
    <div class="row text-center">
      <div class="login-form">
        <form action="/signup/process" method="post">
            <h2 class="text-center">Sign Up<% if(err) { %> - Error<%} %></h2>
            <% if(err) { %><h5 class="p-3 mb-2 bg-danger text-white">Your Username/Password is incorrect. Please Try again.</h5><%} %>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" name="username" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password" required="required">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Retype Password" name="password-again" required="required">
            </div>
            <div class="form-check form-group">
              <input class="form-check-input" type="radio" name="type" id="exampleRadios1" value="buyer" checked>
              <label class="form-check-label" for="exampleRadios1">
                Buyer Account
              </label>
            </div>
            <div class="form-check form-group">
              <input class="form-check-input" type="radio" name="type" id="exampleRadios2" value="merchant">
              <label class="form-check-label" for="exampleRadios2">
                Merchant Account
              </label>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Default BTC Wallet Address" name="wallet" required="required">
          </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
            </div>
        </form>
        <p class="text-center"><a href="/login">Sign In</a></p>
    </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <%- include ('footer'); -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
