<!DOCTYPE html>
<html lang="en">

  <%- include ('head'); -%>

<body>

  <%- include ('nav'); -%>

  <!-- Page Content -->
  <div class="container">

    <!-- Page Features -->
    <div class="row text-center">
      <div class="login-form">
        <form action="/login/process" method="post">
            <h2 class="text-center">Log in<% if(err) { %> - Error<%} %></h2>
            <% if(err) { %><h5 class="p-3 mb-2 bg-danger text-white">Your Username/Password is incorrect. Please Try again.</h5><%} %>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" name="username" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
            <div class="clearfix">
                <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
                <br/><a href="/forgotten" class="pull-right">Forgot Password?</a>
            </div>        
        </form>
        <p class="text-center"><a href="/signup">Create an Account</a></p>
    </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <%- include ('footer'); -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
